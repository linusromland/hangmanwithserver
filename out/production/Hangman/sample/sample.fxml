<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<GridPane fx:id="primary" fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="1" vgap="1">
   <GridPane fx:id="primgrid"
             xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15">
   <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

   <Text fx:id="title" text="Hangman in Java"
         GridPane.columnIndex="0" GridPane.rowIndex="0"
         GridPane.columnSpan="2"/>


   <Text text="Choose Language:"
         GridPane.columnIndex="0" GridPane.rowIndex="2"
         GridPane.columnSpan="2"/>

   <ComboBox fx:id="lang"
             GridPane.columnIndex="0" GridPane.rowIndex="3"/>
      <Text fx:id="dumdum"
            GridPane.columnIndex="0" GridPane.rowIndex="5"
            GridPane.columnSpan="2"/>

      <Button text="submit" GridPane.columnIndex="1" GridPane.rowIndex="3"
              GridPane.columnSpan="2"
              onAction="#handleSubmitButtonAction"/>

   </GridPane>
   <GridPane fx:id="gamemode"
             xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15">
      <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

      <Text fx:id="gamemodetitle"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.columnSpan="2"/>
      <Button fx:id="textsingleplayer"
              onAction="#handleSubmitButtonAction2" GridPane.columnIndex="0" GridPane.rowIndex="2"
              GridPane.columnSpan="2"/>
         <Button fx:id="localmultiplayer"
                 onAction="#handleSubmitButtonAction3" GridPane.columnIndex="0" GridPane.rowIndex="3"
                 GridPane.columnSpan="2"/>
      <Text fx:id="online"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2"/>

   </GridPane>
   <GridPane fx:id="localmulti"
             xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15">
      <Text fx:id="localmultititle"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.columnSpan="2"/>
      <TextField fx:id="localmultitextfield"
      GridPane.columnIndex="0" GridPane.rowIndex="2"
      GridPane.columnSpan="2"/>
      <Button fx:id="localmultisubmit"
              onAction="#handleSubmitButtonAction4" GridPane.columnIndex="0" GridPane.rowIndex="3"
              GridPane.columnSpan="2"/>

   </GridPane>
   <GridPane fx:id="guess"
             xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="15" vgap="15">
      <Text fx:id="guesstitle"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.columnSpan="2"/>
      <TextField fx:id="guessfield"
                 GridPane.columnIndex="0" GridPane.rowIndex="2"
                 GridPane.columnSpan="2"/>


   </GridPane>
</GridPane>

